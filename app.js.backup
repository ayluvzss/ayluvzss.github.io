        avatarElement.id = 'aoAvatar';
    }

    // è®¾ç½®å¤´åƒå†…å®¹
    const isUser = message.role === 'user';
    const avatarData = isUser ? appState.avatars.my : appState.avatars.bot;
    const avatarText = isUser ? 'æˆ‘' : 'æ•–';

    if (avatarData) {
