}

// åˆ¤æ–­æ˜¯å¦ä¸ºæœªæ¥æ—¥æœŸ
function isFutureDate(date) {
    const today = new Date();
    // è®¾ç½®æ—¶é—´ä¸º0ç‚¹0åˆ†0ç§’è¿›è¡Œæ¯”è¾ƒ
    today.setHours(0, 0, 0, 0);
